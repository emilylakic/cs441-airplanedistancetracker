<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="246dp"
                android:layout_marginTop="-15dp"
                app:srcCompat="@drawable/fdc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="422dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/instruction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/laButton"
                android:layout_width="182dp"
                android:layout_height="27dp"
                android:background="@color/lightblue"
                android:text="California to Montana"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_weight="1" />

            <Button
                android:id="@+id/flButton"
                android:layout_width="168dp"
                android:layout_height="27dp"
                android:background="@color/lightblue"
                android:text="Florida to New York"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/customViewLayout"
            android:layout_width="426dp"
            android:layout_height="254dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/flightduration" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/darkblue"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="246dp"
            android:layout_marginTop="-15dp"
            app:srcCompat="@drawable/fdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select a button and tap on the black screen to draw a line from the starting location to your destination! " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/laButton"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:text="New York to California"
                android:textAllCaps="false"
                android:textSize="14dp" />

            <Button
                android:id="@+id/flButton"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="Florida to New York"
                android:textAllCaps="false"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/customViewLayout"
            android:layout_width="426dp"
            android:layout_height="226dp"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

